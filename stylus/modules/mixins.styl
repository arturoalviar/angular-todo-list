animate(duration = .3s, type = ease-in-out)
  -webkit-transition: all duration type
  -moz-transition: all duration type
  -o-transition: all duration type
  -ms-transition: all duration type
  transition: all duration type

make-border(pixels, color, style, type = all)
  if type == left
    border-left: pixels color style
  else if type == right
    border-right: pixels color style
  else if type == top
      border-top: pixels color style
  else if type == bottom
      border-bottom: pixels color style
  else
    border: pixels color style

flex()
  display: -webkit-box
  display: -ms-flexbox
  display: -webkit-flex
  display: flex

flexbox(args...)
  flex()
  -webkit-flex-flow: args
  -ms-flex-flow: args
  flex-flow: args

flex-align(align = center)
  -webkit-align-content: align
  -webkit-content-items: align
  align-content: align
  content-items: align

flex-justify(type = space-between)
  -webkit-justify-content: type
  justify-content: type
